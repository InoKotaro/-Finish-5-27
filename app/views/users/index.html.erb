<h1>Users</h1>
    <table>
        <thead>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
        </thead>

        <tbody>
            <% @books.each do |book| %>
                <tr>
                	<td><%= image_tag book.user.get_profile_image(100,100) %></td>
                  <td><%= book.name %>
                  <td><%= link_to "Show", users_path(book) %></td>
                </tr>
            <% end %>
        </tbody>
    </table>