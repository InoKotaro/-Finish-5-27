<div class= "index">

	<h1>Books</h1>
    <table>
        <thead>
        		<th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </thead>

        <tbody>
            <% @books.each do |book| %>
                <tr>
                		<td><%= image_tag book.user.get_profile_image(100,100) %></td>
                    <td><%= link_to book.title, book_path(book), method: :get %>
                    <td><span><%= book.body %></span></td>
                </tr>
            <% end %>
        </tbody>
    </table>

</div>