<div><%= flash[:notice] %></div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
  <!-----------------------部分テンプレ------------------------------------>
  <%= render 'list', user: @user, book: @book %>

    </div>


    <div class="col-md-8 offset-md-1">

        <h1>Book detail</h1>
        <table>
            <thead>
            	<th></th>
                <th></th>
                <th></th>
                <th colspan="3"></th>
            </thead>

            <tbody>
                <tr>
                    <td>
                        <%= link_to user_path(@book.user) do %>
                          <%= image_tag @book.get_image, class:"card-img-top"; %>
                          <%=  @book.user.name %>
                        <% end %>
                    </td>
                    <td><%= link_to @book.title, book_path(@book), method: :get %></td>
                    <td><%= @book.body %></td>
                    <td>
                        <% if @book.user == current_user %>
                            <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
                            <%= link_to "Destroy", book_path, class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
                        <% end %>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

  </div>
</div>
