<h1>Book detail</h1>
    <table>
        <thead>
        	<th></th>
            <th></th>
            <th></th>
            <th colspan="3"></th>
        </thead>

        <tbody>
            <tr>
                <td>
                    <%= link_to user_path(@book) do %>
                      <%= image_tag @book.get_image, class:"card-img-top"; %>
                    <% end %>
                </td>
                <td><%= link_to @book.title, book_path(@book), method: :get %></td>
                <td><%= @book.body %></td>
                <td>
                    <% if @book.user == current_user %>
                        <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？" %>
                    <% end %>
                </td>
            </tr>
        </tbody>
    </table>
