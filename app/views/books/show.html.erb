<div><%= flash[:notice] %></div>

<div class="container">
  <div class="row">
    <div class="col-md-3">

      <h1>User info</h1>

      <%= image_tag @user.get_profile_image(100,100) %>
      <table>
      	<tbody>
      		<tr>
      		  <th>name</th>
      		  <th><%=  @user.name %></th>
      		</tr>
      		<tr>
      		  <th>introduction</th>
      		  <th><%=  @user.introduction %></th>
      		</tr>
      	</tbody>
      </table>

      <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>


      <h1>New Book</h1>
      <%= form_with model: @book do |f| %>
      	<h4>Title</h4>
          <%= f.text_field :title %>
        <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
      <% end %>
    </div>


    <div class="col-md-8 offset-md-1">
    
        <h1>Book detail</h1>
        <table>
            <thead>
            	<th></th>
                <th></th>
                <th></th>
                <th colspan="3"></th>
            </thead>
    
            <tbody>
                <tr>
                    <td>
                        <%= link_to user_path(@book.user) do %>
                          <%= image_tag @book.get_image, class:"card-img-top"; %>
                          <%=  @book.user.name %>
                        <% end %>
                    </td>
                    <td><%= link_to @book.title, book_path(@book), method: :get %></td>
                    <td><%= @book.body %></td>
                    <td>
                        <% if @book.user == current_user %>
                            <%= link_to "Edit", edit_book_path(@book) %>
                            <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？" %>
                        <% end %>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

  </div>
</div>
